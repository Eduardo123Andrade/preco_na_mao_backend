// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id          String @id @default(uuid())
  name        String
  cpf         String @unique
  phoneNumber String
  password    String

  SessionToken    SessionToken[]
  MarketplaceList MarketplaceList[]
}

model SessionToken {
  id      String  @id @default(uuid())
  token   String
  user_id String
  isValid Boolean @default(true)

  user User @relation(fields: [user_id], references: [id])
}

model Marketplace {
  id      String    @id @default(uuid())
  name    String
  Product Product[]
}

model Product {
  id             String  @id @default(uuid())
  name           String
  price          Decimal
  marketplace_id String

  marketplace               Marketplace                 @relation(fields: [marketplace_id], references: [id])
  ProductsOnMarketplaceList ProductsOnMarketplaceList[]
}

model MarketplaceList {
  id      String @id @default(uuid())
  name    String
  user_id String

  user                      User                        @relation(fields: [user_id], references: [id])
  ProductsOnMarketplaceList ProductsOnMarketplaceList[]
}

model ProductsOnMarketplaceList {
  id                  String @id @default(uuid())
  quantity            Int
  marketplace_list_id String
  product_id          String

  product         Product         @relation(fields: [product_id], references: [id])
  marketplaceList MarketplaceList @relation(fields: [marketplace_list_id], references: [id])
}
