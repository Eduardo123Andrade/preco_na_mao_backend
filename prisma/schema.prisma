// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id          String @id @default(uuid())
  name        String
  cpf         String @unique
  phoneNumber String
  password    String

  SessionToken    SessionToken[]
  MarketplaceList ShoppingList[]
}

model SessionToken {
  id      String  @id @default(uuid())
  token   String
  user_id String
  isValid Boolean @default(true)

  user User @relation(fields: [user_id], references: [id])
}

model Marketplace {
  id      String    @id @default(uuid())
  name    String
  Product Product[]
}

model Product {
  id             String  @id @default(uuid())
  name           String
  price          Decimal
  marketplace_id String

  marketplace            Marketplace              @relation(fields: [marketplace_id], references: [id])
  ProductsOnShoppingList ProductsOnShoppingList[]
}

model ShoppingList {
  id      String   @id @default(uuid())
  name    String
  user_id String
  date    DateTime @default(now())

  user                   User                     @relation(fields: [user_id], references: [id])
  ProductsOnShoppingList ProductsOnShoppingList[]
}

model ProductsOnShoppingList {
  quantity         Int
  shopping_list_id String
  product_id       String

  product      Product      @relation(fields: [product_id], references: [id])
  shoppingList ShoppingList @relation(fields: [shopping_list_id], references: [id])

  @@unique([product_id, shopping_list_id])
}
